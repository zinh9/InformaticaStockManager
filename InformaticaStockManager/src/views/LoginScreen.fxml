<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/22"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoginController">
	<children>
		<VBox alignment="BASELINE_CENTER" prefHeight="200.0"
			prefWidth="100.0">
			<children>
				<Label text="Entrar como Funcionário">
					<font>
						<Font name="System Bold" size="24.0" />
					</font>
				</Label>
			</children>
			<padding>
				<Insets top="50.0" />
			</padding>
		</VBox>
		<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
			spacing="30.0" StackPane.alignment="CENTER">
			<children>
				<TextField fx:id="registrationFild" maxWidth="300.0"
					minWidth="200.0" prefHeight="25.0" promptText="Matrícula:" />
				<PasswordField fx:id="passwordFild" maxWidth="300.0"
					minWidth="200.0" prefHeight="25.0" promptText="Senha:" />
				<Label fx:id="errorMessage" textFill="#d02323" />
				<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0"
					spacing="20.0">
					<children>
						<Button fx:id="enterButton" mnemonicParsing="false"
							onAction="#eventEnterButton" text="Entrar">
							<font>
								<Font name="System Bold" size="14.0" />
							</font>
						</Button>
					</children>
					<padding>
						<Insets top="-50.0" />
					</padding>
				</HBox>
			</children>
			<padding>
				<Insets top="100.0" />
			</padding>
		</VBox>
	</children>
</StackPane>
